{
  "compilerOptions": {
    "target": "es2017",                          
    "module": "commonjs",                     
    "lib": ["es6"],                             
    "allowJs": true,                       
    "outDir": "./build",                        
    "rootDir": "./src",                       
    "removeComments": true,                
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],                          
    "esModuleInterop": true,  
    "sourceMap": true,                
    "resolveJsonModule": true,        
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true
  },
}
